# --------------------------------------------------------------------------
# Make variables.
# --------------------------------------------------------------------------

CFLAGS=-Wall -Wextra --std=gnu11

# --------------------------------------------------------------------------
# Targets.
# --------------------------------------------------------------------------

example: src/example.c src/clio.c
	@mkdir -p bin
	$(CC) $(CFLAGS) -o bin/example src/example.c src/clio.c

clean:
	rm -f src/*.o
